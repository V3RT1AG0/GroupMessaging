<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.novoda.v3rt1ag0">

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.INTERNET" />

  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity android:name="com.novoda.v3rt1ag0.login.LoginActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.novoda.v3rt1ag0.channel.ChannelsActivity" />

    <activity
      android:name="com.novoda.v3rt1ag0.chat.ChatActivity"
      android:parentActivityName="com.novoda.v3rt1ag0.channel.ChannelsActivity" />

    <activity
      android:name="com.novoda.v3rt1ag0.channel.NewChannelActivity"
      android:label="@string/createChannel"
      android:parentActivityName="com.novoda.v3rt1ag0.channel.ChannelsActivity" />

    <activity android:name="com.novoda.v3rt1ag0.user.UsersActivity" />

    <activity android:name="com.novoda.v3rt1ag0.welcome.WelcomeActivity">
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data
          android:host="novoda.com"
          android:pathPrefix="/bonfire/welcome"
          android:scheme="https" />
        <data
          android:host="novoda.com"
          android:pathPrefix="/bonfire/welcome"
          android:scheme="http" />
      </intent-filter>
    </activity>

  </application>

</manifest>
